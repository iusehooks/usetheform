{
  "extends": [
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "prettier/react",
    "prettier/standard",
    "prettier/flowtype"
  ],
  "plugins": [
    "prettier",
    "react",
    "flowtype"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
      "no-unused-vars": ["error", { "varsIgnorePattern": "omit" }],
      "prettier/prettier": ["error", {
        "endOfLine":"auto",
        "trailingComma": "none",
        "arrowParens" :"avoid"
      }],
      "react/prop-types": 0,
      "react/display-name": 0
   },
  "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
